QWidget {
	border-top: 10px solid qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #fff, stop: 1.0 #c0c0c0);
	border-bottom: 10px solid qlineargradient(x1: 0, y1: 1, x2: 0, y2: 0, stop: 0 #fff, stop: 1.0 #c0c0c0);
	border-left: 10px solid qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #fff, stop: 1.0 #c0c0c0);
	border-right: 10px solid qlineargradient(x1: 1, y1: 0, x2: 0, y2: 0, stop: 0 #fff, stop: 1.0 #c0c0c0);

	padding: 10px 20px;
	background-color: #fff;
	padding-bottom: 200px;
}

